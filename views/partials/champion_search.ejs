<% if (currentUser) { %>
<% var thisUser = currentUser._id %>
<% } %>


<div class="well well-large">
	<div class="panel-body container">
		<form method="get" action="/profile/summonner">		
			
			<div class="form-group col-sm-6">
				<div class="input-group">
					<span class="input-group-btn">
						<button class="btn btn-default">Go</button>
				    </span>
				    <input class="form-control" type="text" name="list-item" placeholder="Search by name">
				</div>
		    </div>
				
			<div class="form-group col-sm-6">
				<div class="input-group">
				<span class="label label-default">label</span> 
				<input type="checkbox" name="Search">
				</div>
			</div>

		</form>
	</div>
</div>

<section id="champion_container" class="container">
	<div class="container-fluid">
		<div class="row">
			<div class=" col-xs-12 col-md-10 col-md-offset-1">
				<% if (currentUser) { %>
					<h5 class="current_User"> <%= thisUser %> </h5>
				<% }else{ %>
					<h5>Champions</h5>
				<% } %>	
			</div>
		</div>
		
		<div id=champion_backframe well>
			<div class="row">
			<!--Where Champs Go-->
				<div id='champions'>
				</div>
			<!--Where Champs Stop -->
			</div>
		</div>
	</div>
</section>

<!-- begin champModal: this is not visible until you call .modal() on it -->
<div class="modal fade" tabindex="-1" role="dialog" id="champModal">
  <div class="modal-dialog">
    <div class="modal-content">
		<div class='modal-header'>
        	<button type='button' class='btn btn-xs close' data-dismiss='modal' aria-label='Close'>
        		<span aria-hidden='true'>&times;</span>
        	</button>
        </div>
		<!--Where Modals Go-->
		<div id='champion_modal'>
		</div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
  









